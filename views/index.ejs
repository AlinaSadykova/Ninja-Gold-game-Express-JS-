<body>
        <h1 id="nameofthegame">Ninja Gold</h1>
        <h2>Your Gold: <%= session%></h2>
        <div class="square">
            <h3>Farm</h3>
            <h4>(earns 10-20 golds)</h4>
            <form action="/farm" method="POST">
                <input type="hidden"  name="building" value="farm" >
                <input type="submit" value="Find Gold!" >
            </form>
        </div>
        <div class="square">
            <h3>Cave</h3>
            <h4>(earns 5-10 golds)</h4>
            <form action="/cave" method="POST">
            <input type="hidden"  name="building" value="cave" >
                <input type="submit" value="Find Gold!" >
            </form>
        </div>
        <div class="square">
            <h3>House</h3>
            <h4>(earns 2-5 golds)</h4>
            <form action="/house" method="POST">
                <input type="hidden"  name="building" value="house" >
                <input type="submit" value="Find Gold!" >
            </form>
        </div>
        <div class="square">
            <h3>Casino</h3>
            <h4>(earns 0-50 golds)</h4>
            <form action="/casino" method="POST">
                <input type="hidden"  name="building" value="casino" >
                <input type="submit" value="Find Gold!" >
            </form>
        </div>
        <h2>Activities:</h2>
       
        <div id="box">
                <% for(y = 0; y<activity.length; y++) {%>
                       
                            <h4><%= activity[y]%></h4>
                          
                     <% } %>
        </div>
        <a href='/reset'><button>Play again</button></a>
    
    
</body>
</html>